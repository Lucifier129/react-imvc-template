{
  "name": "react-imvc",
  "version": "1.0.0",
  "private": true,
  "config": {
    "vd": "/test",
    "port": 3003,
    "env": "fat"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development PORT=3003 node ./bin/www",
    "start:prod": "cross-env NODE_ENV=production PORT=3003 node ./bin/www",
    "start:client": "cross-env NODE_ENV=development CLIENT_RENDER=1 PORT=3003 PORT=3003 node ./bin/www",
    "prebuild:prod": "rimraf ./static/javascript",
    "build:prod": "cross-env NODE_ENV=production webpack --config ./build/webpack.config.js --progress --hide-modules",
    "build:dev": "cross-env NODE_ENV=development webpack --config ./build/webpack.config.js --progress --hide-modules",
    "build:show-dev": "cross-env NODE_ENV=development SHOW=yes webpack --config ./build/webpack.config.js --progress --hide-modules",
    "build:show-prod": "cross-env NODE_ENV=production SHOW=yes webpack --config ./build/webpack.config.js --progress --hide-modules",
    "build": "npm run build:prod",
    "test": "cross-env NODE_ENV=test mocha --opts mocha.opts",
    "lint:staged": "lint-staged",
    "prettier": "standard-prettier src/**/*.js server/**/*.js",
    "pkg": "npm run build:prod",
    "prepkg": "git pull --rebase origin release",
    "postpkg": "git add -A && git commit -m auto-pkg && git push origin release"
  },
  "lint-staged": {
    "src/**/*.js": [
      "standard-prettier --write",
      "git add"
    ],
    "server/**/*.js": [
      "standard-prettier --write",
      "git add"
    ]
  },
  "pre-commit": "lint:staged",
  "standard": {
    "parser": "babel-eslint"
  },
  "devDependencies": {
    "babel-cli": "^6.14.0",
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.5",
    "babel-polyfill": "^6.13.0",
    "babel-preset-latest": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babel-register": "^6.14.0",
    "bundle-loader": "^0.5.4",
    "expect": "^1.20.2",
    "lint-staged": "^3.3.1",
    "memory-fs": "^0.4.1",
    "mocha": "^3.0.2",
    "optimize-js-plugin": "^0.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "^0.20.0",
    "rimraf": "^2.6.1",
    "standard": "^8.6.0",
    "standard-loader": "^5.0.0",
    "standard-prettier": "^1.0.0",
    "webpack": "^1.13.3",
    "webpack-bundle-analyzer": "^1.2.5",
    "webpack-dev-middleware": "^1.9.0"
  },
  "dependencies": {
    "bluebird": "^3.4.6",
    "body-parser": "~1.13.2",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cookie-parser": "~1.3.5",
    "create-app": "^0.4.0",
    "cross-env": "^2.0.1",
    "debug": "~2.2.0",
    "downloadjs": "^1.4.7",
    "express": "~4.14.0",
    "helmet": "^3.1.0",
    "html-entities": "1.0.10",
    "lodash": "^4.15.0",
    "moment": "^2.17.1",
    "morgan": "~1.6.1",
    "node-fetch": "^1.6.3",
    "pm2": "^1.1.3",
    "querystring": "^0.2.0",
    "rc-upload": "^2.3.2",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "react-lite": "^0.15.32",
    "redis": "2.6.3",
    "relite": "^1.0.5",
    "rome": "^2.1.22",
    "serve-favicon": "^2.3.0",
    "thrift": "0.9.0",
    "validator": "^6.1.0",
    "whatwg-fetch": "^1.0.0"
  }
}
